{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".output/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [".env.local"]
    },
    "lint": { "dependsOn": ["^lint"] },
    "lint:fix": { "dependsOn": ["^lint:fix"] },
    "prepare": { "cache": false },
    "test": {
      "dotEnv": [".env.test"]
    },
    "test:watch": {
      "cache": false,
      "dotEnv": [".env.test"]
     }
  }
}